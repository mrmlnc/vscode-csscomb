{
  "name": "vscode-csscomb",
  "displayName": "CSScomb",
  "description": "VS Code plugin for CSScomb â€” CSS coding style formatter",
  "version": "2.2.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.4.0"
  },
  "icon": "icon.png",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-csscomb/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-csscomb"
  },
  "keywords": [
    "CSScomb",
    "CSS",
    "Less",
    "Sass",
    "SCSS"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:csscomb.processEditor",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:scss"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [{
      "command": "csscomb.processEditor",
      "title": "CSScomb (CSS coding style formatter)"
    }],
    "configuration": {
      "type": "object",
      "title": "CSScomb configuration",
      "properties": {
        "csscomb.preset": {
          "type": ["object", "string"],
          "default": "csscomb",
          "description": "One of the predefined configs (csscomb, yandex, zen) or custom config (object)."
        },
        "csscomb.ignoreFilesOnSave": {
          "type": "array",
          "default": [],
          "description": "An optional array of glob-patterns to ignore files on save."
        },
        "csscomb.autoFormatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Auto format on save"
        },
        "csscomb.useLegacyCore": {
          "type": "boolean",
          "default": false,
          "description": "Use CSScomb 3.x.x"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*csscomb.json",
        "url": "http://json.schemastore.org/csscomb"
      }
    ]
  },
  "devDependencies": {
    "vscode": "^0.11.13",
    "xo": "^0.17.0"
  },
  "dependencies": {
    "co": "4.6.0",
    "csscomb-next": "https://github.com/mrmlnc/csscomb.js/tarball/d3929655199579fb3ee50da23186e630480cb1fe",
    "csscomb": "^3.1.8",
    "multimatch": "2.1.0"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node"
    ]
  }
}
